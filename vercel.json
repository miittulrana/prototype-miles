{
  "version": 2,
  "buildCommand": "pnpm install terser && pnpm run build",
  "installCommand": "npm i -g pnpm && pnpm install",
  "outputDirectory": "dist",
  "framework": "vite",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "github": {
    "silent": true
  }
}